generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "sqlserver"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id        Int     @id @default(autoincrement())
  email     String  @unique
  firstName String?
  isAdmin   Boolean @default(true)
  lastName  String?
  password  String  @default("")
}

model Section {
  id        Int       @id @default(autoincrement())
  order     Int?
  title     String    @default("New Section")
  header    String?
  subHeader String?
  contents  Content[]
}

model Content {
  id         Int     @id @default(autoincrement())
  content    String
  order      Int?
  section    Section @relation(fields: [section_id], references: [id])
  section_id Int
}

model Experience {
  id      Int    @id @default(autoincrement())
  title   String @default("New Experience")
  content String @default("")
  date    String @default("")
}

model AboutMe {
  id           Int    @id @default(autoincrement())
  emailLink    String @default("dsutton1080@gmail.com")
  linkedInLink String @default("")
  githubLink   String @default("")
  contentOne   String @default("")
  contentTwo   String @default("")
  contentThree String @default("")
  contentFour  String @default("")
  contentFive  String @default("")
}
