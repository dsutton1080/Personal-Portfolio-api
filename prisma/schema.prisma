generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-arm64-openssl-3.0.x"]
}

datasource db {
  provider          = "sqlserver"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id        Int     @id @default(autoincrement())
  email     String  @unique
  firstName String?
  isAdmin   Boolean @default(true)
  lastName  String?
  password  String  @default("")
}

model Section {
  id        Int       @id @default(autoincrement())
  order     Int?
  title     String    @default("New Section")
  header    String?
  subHeader String?
  contents  Content[]
}

model Content {
  id         Int     @id @default(autoincrement())
  content    String
  order      Int?
  section    Section @relation(fields: [section_id], references: [id], onDelete: Cascade)
  section_id Int
}

model Experience {
  id      Int    @id @default(autoincrement())
  title   String @default("New Experience")
  content String @default("")
  date    String @default("")
}

model Project {
  id        Int     @id @default(autoincrement())
  title     String  @default("New Project")
  content   String  @default("")
  repoLink  String  @default("")
  repoLabel String  @default("")
  order     Int?
  imageUrl  String?
}
