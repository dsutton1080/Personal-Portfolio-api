generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id      Int      @id @default(autoincrement())
  email   String   @unique
  password String  @default("")
  firstName    String?
  lastName String?
  isAdmin Boolean @default(true)
}